@model StartPageModel
@{
    ViewData[ViewKey.Title] = Model.Text;
}

<div class="row">
    <div class="col-12 mt-3"><h2>@Model.Text</h2></div>
</div>
<div class="row mt-2">
    @foreach (var group in Model.Groups)
    {
        <div class="col-lg-4 col-md-6 col-sm-12 mt-3">
            <h3>@group.Text</h3>
            <ul class="start-link-list">
                @foreach (var link in group.Links)
                {
                    <li>
                        <a href="@link.Url">
                            <icon value="@link.Icon" style="@link.IconStyle" /> @link.Text
                        </a>
                    </li>
                }
            </ul>
        </div>
    }
</div>


