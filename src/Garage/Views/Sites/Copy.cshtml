@model SiteCopyModel
@{
    ViewData["Title"] = $"Copy Site - {Model.SourceText}";
}
<div class="row mt-2">
    <h2>Copy Site @Model.SourceText</h2>
</div>
<form asp-action="Copy" method="post">
    <input type="hidden" asp-for="SourceSlug" />
    <input type="hidden" asp-for="SourceText" />
    <div class="row">
        <div class="col-12 mt-2">
            <label asp-for="Text" class="form-label">Site Name</label>
            <input asp-for="Text" class="form-control" placeholder="ex: My Site"/>
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <div class="col-12 mt-2">
            <label asp-for="Slug" class="form-label">Slug</label>
            <input asp-for="Slug" class="form-control" placeholder="ex: my-site"/>
            <span asp-validation-for="Slug" class="text-danger"></span>
        </div>
        <div class="col-12 mt-2">
            <label asp-for="SortIndex" class="form-label">Sort Index</label>
            <input asp-for="SortIndex" class="form-control" type="number" min="1" max="200"/>
            <span asp-validation-for="SortIndex" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3 mt-3">
        <div class="col-12 text-end">
            <a asp-action="Index" class="btn btn-secondary"><icon value="GarageCancel"/> Cancel</a>
            <button type="submit" class="btn btn-primary"><icon value="GarageSave"/> Save</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}