@model BookmarkDeleteModel
@{
    ViewData[ViewKey.Title] = "Delete Bookmark";
}

<div class="row mt-2">
    <h1 class="text-danger">Confirm Bookmark Deletion</h1>
</div>
<div class="row">
    <p>Are you sure you want to delete the Bookmark '@Model.BookmarkText' from @Model.SiteText | @Model.PageText | @Model.GroupText?</p>
</div>
<div class="row text-end">
    <form method="post">
        <input type="hidden" asp-for="PageSlug" />
        <input type="hidden" asp-for="PageText" />
        <input type="hidden" asp-for="SiteSlug" />
        <input type="hidden" asp-for="SiteText" />
        <input type="hidden" asp-for="GroupId" />
        <input type="hidden" asp-for="GroupText" />
        <input type="hidden" asp-for="BookmarkId" />
        <input type="hidden" asp-for="BookmarkText" />
        <button class="btn btn-danger"><icon value="GarageDelete" />Confirm Delete</button>
        <a asp-controller="Bookmarks" asp-route-action="Index" asp-route-pageSlug="@Model.PageSlug" asp-route-siteSlug="@Model.SiteSlug" asp-route-groupId="@Model.GroupId" class="btn btn-secondary">
            <icon value="GarageCancel" />
            Cancel
        </a>
    </form>
</div>