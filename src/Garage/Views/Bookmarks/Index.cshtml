@model BookmarkIndexModel;
@{
    ViewData[ViewKey.Title] = $"{Model.PageText}|{Model.GroupText} Bookmarks";
}

<div class="row mt-2">
    <div class="col-md-8">
        <h2>Bookmarks: @Model.SiteText | @Model.PageText | @Model.GroupText</h2>
    </div>
    <div class="col-md-4 text-end">
        <a asp-route="Groups" asp-route-siteSlug="@Model.SiteSlug" asp-route-pageSlug="@Model.PageSlug" asp-route-groupId="@Model.GroupId">
            <icon value="ArrowLeftShort"></icon> Back to Groups
        </a>
    </div>
</div>
<div class="row mt-2">
    <div class="col-12">
        @if (Model.Bookmarks.Any())
        {
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th>Bookmark</th>
                        <th class="text-center">Url</th>
                        <th class="text-center">Index</th>
                        <th class="text-center">Edit</th>
                        <th class="text-center">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Bookmarks)
                    {
                        <tr>
                            <td><icon value="@item.Icon" style="@item.IconStyle" /> @item.Text</td>
                            <td class="auto-ellipsis"><a href="@item.Href" target="_blank">@item.Href</a></td>
                            <td class="text-center">@item.SortIndex</td>
                            <td class="text-center">
                                <a asp-route="Bookmarks" asp-route-action="Edit" asp-route-siteSlug="@Model.SiteSlug" asp-route-pageSlug="@Model.PageSlug" asp-route-groupId="@Model.GroupId" asp-route-id="@item.BookmarkId">
                                    <icon value="GarageEdit" />
                                </a>
                            </td>
                            <td class="text-center">
                                <a asp-route="Bookmarks" asp-route-action="Delete" asp-route-siteSlug="@Model.SiteSlug" asp-route-pageSlug="@Model.PageSlug" asp-route-groupId="@Model.GroupId" asp-route-id="@item.BookmarkId">
                                    <icon value="GarageDelete" />
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No bookmarks found for current group</p>
        }
    </div>
</div>
<div class="row">
    <div class="col-12 text-end">
        <a asp-route="Bookmarks" asp-route-action="Add" asp-route-siteSlug="@Model.SiteSlug" asp-route-pageSlug="@Model.PageSlug" asp-route-groupId="@Model.GroupId">
            <icon value="PlusCircle" /> Add Bookmark
        </a>
    </div>
</div>