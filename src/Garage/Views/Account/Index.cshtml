@model UserAccountModel
@{
    ViewData[ViewKey.Title] = "Profile";
}

<div class="row">
    <div class="col-12">
        <h1 class="d-flex justify-content-center">@Model.UserName</h1>
    </div>
</div>
<div class="row">
    <div class="col-12 d-flex justify-content-center">
        <img src="@Model.Picture" alt="User Avatar for @Model.UserName"/>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <p class="d-flex justify-content-center">@Model.RolesString</p>
    </div>
</div>
<div class="row">
    <div class="col-12 d-flex justify-content-center">
        <a asp-controller="Account" asp-action="LogOut" class="btn btn-danger">Log Out</a>
    </div>
</div>
<div class="row">
    <div class="col-12 d-flex justify-content-center mt-4">
        <a asp-controller="Account" asp-action="Diagnostics" class="text-muted">Diagnostics</a>
    </div>
</div>
